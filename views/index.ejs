<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini WhatsApp</title>
    <link rel="stylesheet" href="style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Video Background -->
    <video class="video-bg" autoplay muted loop playsinline>
      <source src="/videos/bg.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>

    <div class="container">
      <header>
        <h2>ChitChat</h2>
        <form method="GET" action="/chats/new">
          <button class="new-chat-btn">New Chat</button>
        </form>
      </header>

      <main>
        <% if(chats.length === 0){ %>
        <p class="no-chats">No chats available. Start a new conversation!</p>
        <% } %> <% for(let chat of chats){ %>
        <div class="chat-card">
          <div class="chat-header">
            <span class="from">From: <strong><%=chat.from%></strong></span>
            <span class="to">To: <strong><%=chat.to%></strong></span>
          </div>
          <div class="chat-message">
            <p><%=chat.msg%></p>
          </div>
          <div class="chat-actions">
            <form
              method="get"
              action="/chats/<%=chat._id%>/edit"
              class="action-btn"
            >
              <button>Edit</button>
            </form>
            <form
              method="post"
              action="/chats/<%=chat._id%>?_method=DELETE"
              class="action-btn"
            >
              <button>Delete</button>
            </form>
          </div>
          <div class="chat-footer">
            <span class="time"
              ><%=chat.created_at.toString().split(" ")[4]%></span
            >
            <span class="date"
              ><%=chat.created_at.toString().split(" ").slice(0,4).join("
              ")%></span
            >
          </div>
        </div>
        <% } %>
      </main>
    </div>
  </body>
</html>
